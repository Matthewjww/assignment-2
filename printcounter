import ast

def count_print_keywords(file_path):
    try:
        with open(file_path, 'r') as file:
            source_code = file.read()
            tree = ast.parse(source_code)
            count = sum(isinstance(node, ast.Print) for node in ast.walk(tree))
        return count
    except FileNotFoundError:
        print(f"Error: File '{file_path}' not found.")
        return -1

# Printing the count:
file_path = 'matthewsamazingcode.py'  # replace with where you want it to print
print_count = count_print_keywords(file_path)
if print_count >= 0:
    print(f"The keyword 'print' is used {print_count} times in the file.")